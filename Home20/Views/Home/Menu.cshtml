@{
    ViewData["Title"] = "Меню";
}

<section class="menu">
    <div class="menu__title">
        <h1 class="menu__h1 ">Наше Меню</h1>
    </div>
    <div class="container mt-4">
        <div class="row ">
            @foreach (Food food in Model)
            {
                <div class="col-4">
                    <div class="card" style="width: 18rem;">
                        <img src="@food.Img" alt="food" />
                        <div class="card-body">
                            <div class="card-title myCard">
                                <h5 class="card-h5">
                                    @food.Name
                                </h5>
                                <p class="card__title-p">$@food.Price</p>
                            </div>
                            <p class="card-text">@food.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

